<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobraysol.mobashshir.raysol.GetLocation">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_gravity="center_horizontal"
        android:text="Choose Address"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Flat/Building/Street"
        android:layout_marginLeft="23dp"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="350dp"
        android:layout_height="60dp"

        android:id="@+id/CurrentAddress"
        android:background="@drawable/addressedittext"
        android:layout_gravity="center_horizontal"

        android:text=""/>


    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Locality"
        android:layout_marginLeft="23dp"
        android:textSize="20sp"
        android:textColor="#000000"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/CurrentAddressLocality"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/addressedittext"
        android:text=""/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnnextaddressactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Next" />

            <Button
                android:id="@+id/btnpreviousaddresactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Previous" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
