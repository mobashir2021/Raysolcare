<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobraysol.mobashshir.raysol.AcinstallationWindowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Services"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="15dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="45dp"
            android:id="@+id/radiogrpAcinstallWindow">

            <RadioButton
                android:id="@+id/AcinstallationwindowNextOneinstallation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Installation Rs 599"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"
                android:checked="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--Actual Price based On inspection"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--199/- visiting charge if no service taken"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>




            <RadioButton
                android:layout_marginTop="20dp"
                android:id="@+id/AcinstalltionwindowNextOneuninstallation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uninstallation(Dismantling)Rs 349"
                android:textSize="20sp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--Deep Cleaning of AC and Filter,Coils\n   etc. cleaned with water"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--199/- visiting charge if no service taken"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>


        </RadioGroup>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnNextAcinstallWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Next" />

            <Button
                android:id="@+id/btnPreviousAcinstallWindow"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Previous" />
        </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
